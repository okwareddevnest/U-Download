{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "U-Download",
  "version": "3.0.0",
  "identifier": "com.udownload.application",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "beforeBundleCommand": null
  },
  "app": {
    "windows": [
      {
        "title": "U-Download",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 U-Download. All rights reserved.",
    "category": "Utility",
    "shortDescription": "Fast YouTube downloader",
    "longDescription": "U-Download is a beautiful, cross-platform YouTube downloader with a modern UI. Essential binaries (yt-dlp, aria2c, FFmpeg) are downloaded separately on first run to keep the installation size minimal.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "background": "icons/dmg-background.png"
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": [],
        "section": "video",
        "priority": "optional",
        "files": {
          "/usr/share/applications/u-download.desktop": "assets/u-download.desktop",
          "/usr/share/pixmaps/u-download.png": "icons/512x512.png"
        }
      },
      "rpm": {
        "epoch": 0,
        "files": {
          "/usr/share/applications/u-download.desktop": "assets/u-download.desktop",
          "/usr/share/pixmaps/u-download.png": "icons/512x512.png"
        },
        "release": "1"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/okwareddevnest/U-Download/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZCMzFFMjFGNDBFRkM1RjcKUldTQUo0ZGN1RTdGOXRHYnZUdVBYTjczN1FKdFZCVkVQNzFjMHEvZmF2U0lCdHFXODZST0ZDbmsK"
    }
  }
}