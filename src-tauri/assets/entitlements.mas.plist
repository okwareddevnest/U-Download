<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Mac App Store specific entitlements -->
    
    <!-- App Sandbox (required for Mac App Store) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Network access for downloading videos -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Outgoing network connections -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Deny incoming network connections -->
    <key>com.apple.security.network.server</key>
    <false/>
    
    <!-- Hardware access (disabled for security) -->
    <key>com.apple.security.device.audio-input</key>
    <false/>
    <key>com.apple.security.device.camera</key>
    <false/>
    <key>com.apple.security.print</key>
    <false/>
    
    <!-- App groups for data sharing (if needed in future) -->
    <!-- <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.udownload.shared</string>
    </array> -->
    
    <!-- Disable JIT for Mac App Store compliance -->
    <key>com.apple.security.cs.allow-jit</key>
    <false/>
    
    <!-- Disable unsigned executable memory for Mac App Store -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <false/>
    
    <!-- Disable executable page protection override -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <false/>
    
    <!-- Apple Events (disabled for security) -->
    <key>com.apple.security.automation.apple-events</key>
    <false/>
    
    <!-- Note: For Mac App Store, we cannot include custom binary execution -->
    <!-- The bundled binaries approach will need to be modified for MAS -->
    <!-- Consider using system frameworks or approved alternatives -->
    
</dict>
</plist>