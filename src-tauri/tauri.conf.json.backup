{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "U-Download",
  "version": "2.2.0",
  "identifier": "com.udownload.application",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "beforeBundleCommand": null
  },
  "app": {
    "windows": [
      {
        "title": "U-Download",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "appimage",
      "nsis",
      "msi",
      "dmg",
      "macos",
      "updater"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [
      "binaries"
    ],
    "externalBin": [],
    "copyright": "Copyright Â© 2025 U-Download. All rights reserved.",
    "category": "Utility",
    "shortDescription": "Fast YouTube downloader",
    "longDescription": "U-Download is a beautiful, cross-platform YouTube downloader powered by yt-dlp and aria2c for maximum download speed and reliability.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "background": "icons/dmg-background.png"
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English", "Spanish", "French", "German", "Japanese"],
        "license": "../LICENSE",
        "startMenuFolder": "U-Download",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      },
      "msi": {
        "displayLanguageSelector": true,
        "language": "en-US",
        "installMode": "perMachine",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
      }
    },
    "linux": {
      "deb": {
        "depends": [],
        "section": "video",
        "priority": "optional",
        "files": {
          "/usr/share/applications/u-download.desktop": "assets/u-download.desktop",
          "/usr/share/pixmaps/u-download.png": "icons/512x512.png"
        }
      },
      "rpm": {
        "epoch": 0,
        "files": {
          "/usr/share/applications/u-download.desktop": "assets/u-download.desktop",
          "/usr/share/pixmaps/u-download.png": "icons/512x512.png"
        },
        "release": "1"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {}
}
